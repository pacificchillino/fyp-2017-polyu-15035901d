<%- include('header'); %>
	<script src="/socket.io/socket.io.js"></script>
	<script language = "javascript">
		
		var socket = io();

		socket.on('connect', function () {
			socket.on('msg', function(data) {
				document.getElementById("msg").innerHTML +=
					"<br/><span style='color: " + data.color + "'>"
					+ "(" + data.date + ")"
					+ "<strong>" + data.message + "</strong>"
					+ "</span>";
			});
			socket.on('msg2', function(data) {
				document.getElementById("msg").innerHTML +=
					"<br/><span style='color: " + data.color + "'>"
					+ "(" + data.date + ")"
					+ "<strong>" + data.message + "</strong>"
					+ "</span>"
					+ "<br/><small>" + data.message2 + "</small>";
			});
		});

		function clear_msg(){
			document.getElementById("msg").innerHTML = "";
		}

	</script>
	<div class="container">
		<button type="button" class="btn btn-default" onclick="clear_msg()">Clear Messages</button>
		<div id = "msg" style="font-size: 100%;"></div>
		<br/>
		<button type="button" class="btn btn-default" onclick="clear_msg()">Clear Messages</button>
	</div>
